doctype html
html(lang='pt-br')
  head
    block head
      - var pageUrl = homepage + '/'
      - var pageTitle = title + ' | Sites, blogs e lojas virtuais com WordPress'
      - var pageDescription = description
      include ../includes/head.pug
    block stylesheets
      if isProduction
        style
          include ../app.css
        // Global site tag (gtag.js) - Google Analytics
        script(src='https://www.googletagmanager.com/gtag/js?id=UA-109583868-1' async)
        script.
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'UA-109583868-1');
      else
        link(rel='stylesheet', href='/assets/stylesheets/bundle' + fileHash + '.css')
  body
    include ../includes/header.pug
    main
      block content
    include ../includes/footer.pug
    block scripts
      script(src='/assets/javascripts/vendor' + fileHash + '.js')
      script(src='/assets/javascripts/bundle' + fileHash + '.js')
