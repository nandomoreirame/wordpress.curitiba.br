html,
body,
main
  width 100%
  height 100%

body
  background-color ceruleanColor
  position relative
  &:before
    content ''
    display block
    width 100%
    height 100%
    background-color blackColor
    clip-path polygon(0 0, 100% 0, 100% 0%, 0% 100%)
    opacity .05
    position absolute
    top 0
    right 0
    bottom 0
    left 0

hr
  border none
  border-bottom borderBase
  margin spacingBase 0
