html
  box-sizing border-box

*, *:before, &:after
  box-sizing inherit

.container
  center(100%)
  padding-right (gutter / 2)
  padding-left (gutter / 2)
  @extend .clearfix
  +above(tablet-md)
    max-width tablet-md
  +above(desktop-lg)
    max-width desktop-lg
  +above(desktop-xl)
    max-width desktop-xl

.row
  margin-left -(gutter / 2)
  margin-right -(gutter / 2)
  @extend .clearfix

