.hero,
.container
  position relative
  +above(tablet-md)
    display flex
    align-items center

.hero
  overflow-x hidden
  +above(tablet-md)
    width 100%
    height 100%
    justify-content center
    overflow hidden
  .container
    +above(tablet-md)
      justify-content flex-start
  .form
    margin 0
    padding toRem(spacingSmall) 0
    max-width 560px
    +below(desktop-xl)
      max-width 400px
      margin 0 auto
  &__inner
    +below(desktop-xl)
      padding 4rem 0 0
      text-align center
  &__text
    +above(desktop-xl)
      flex 0 0 60%
    .title
      font-size 42px
      font-weight fontWeightRegular
      line-height 1.2
      +above(tablet-md)
        font-size 62px
    .lead
      font-size 20px
      opacity .8
      +above(tablet-md)
        font-size 18px
  &__notebook
    display none
    +above(desktop-xl)
      display block
      position absolute
      top 0
      right 0
      flex 0 0 40%
      height 100vh
      transform translate3d(55%, -15%, 0)
    img
      display block
      width 100%
      height auto
