.footer
  padding toRem(spacingSmall)
  text-align center
  @extend .clearfix
  +above(tablet-md)
    position absolute
    width 100%
    bottom 0
    right 0
    left 0
    z-index 100
  p
    font-size 11px
    font-weight 100
    line-height 2.75
    color lightNavyColor
    margin 0
    &, strong
