.navbar
  line-height 6.25rem
.nav
  text-align center
  list-style none
  padding 0
  margin 0
  &__item,
  &__link
    display inline-block
  &__link
    font-size 16px
    padding 0 .9375rem
    border-radius 1.5625rem
    text-decoration none
    position relative
    line-height 3.125rem
    transform translate3d(0, 0, 0)
    &:before
      left .9375rem
      bottom 0
    &:after
      right .9375rem
      top 0
    &:before,
    &:after
      content ''
      display block
      height 2px
      width 0%
      background-color whiteColor
      transition .12s width ease-in-out
      position absolute
    &:hover,
    &:focus
      &:before,
      &:after
        width 50%
    &.featured
      background-color rgba(whiteColor, .2)
      padding 0 1.875rem
      transition .12s background-color ease-in-out, .12s color ease-in-out
      &:hover,
      &:focus
        background-color rgba(whiteColor, .9)
        color ceruleanColor
      &:before,
      &:after
        display none
